                    }
                </div>
            </div>
        </div>

        <!-- Pagination -->
        @if (totalPages > 1)
        {
            <div class="pagination" id="doctorPagination">
                @if (pageNumber > 1)
                {
                    <a href="#" onclick="goToPage(@pageNumber - 1)" class="page-link">
                        <i class="fas fa-chevron-left"></i> Previous
                    </a>
                }

                @for (int i = 1; i <= totalPages; i++)
                {
                    if (i == pageNumber)
                    {
                        <span class="page-link active">@i</span>
                    }
                    else if (i == 1 || i == totalPages || (i >= pageNumber - 2 && i <= pageNumber + 2))
                    {
                        <a href="#" onclick="goToPage(@i)" class="page-link">@i</a>
                    }
                    else if (i == pageNumber - 3 || i == pageNumber + 3)
                    {
                        <span class="page-dots">...</span>
                    }
                }

                @if (pageNumber < totalPages)
                {
                    <a href="#" onclick="goToPage(@pageNumber + 1)" class="page-link">
                        Next <i class="fas fa-chevron-right"></i>
                    </a>
                }
            </div>
        }
    </div>
</section>

@section Scripts {
    <script>
        // Debounce function to prevent too many API calls
        let filterTimeout;
        function debouncedFilter() {
            clearTimeout(filterTimeout);
            filterTimeout = setTimeout(() => {
                applyFilters(1); // Always go to page 1 when filtering
            }, 500);
        }

        // Function to remove a specific filter
        function removeFilter(filterName) {
            const form = document.getElementById('filtersForm');
            const input = form.querySelector(`[name="${filterName}"]`);

            if (input) {
                if (input.type === 'select-one') {
                    input.value = input.querySelector('option').value; // Reset to first option
                } else if (input.type === 'text') {
                    input.value = '';
                } else if (filterName === 'yearsOfExperience') {
                    input.value = '0';
                } else if (filterName === 'sortBy') {
                    input.value = 'name_asc';
                }
            }

            applyFilters(1);
        }

        // Function to change page size
        function changePageSize(newSize) {
            const form = document.getElementById('filtersForm');
            let pageSizeInput = form.querySelector('[name="pageSize"]');

            if (!pageSizeInput) {
                pageSizeInput = document.createElement('input');
                pageSizeInput.type = 'hidden';
                pageSizeInput.name = 'pageSize';
                form.appendChild(pageSizeInput);
            }

            pageSizeInput.value = newSize;
            applyFilters(1);
        }

        // Function to go to specific page
        function goToPage(page) {
            applyFilters(page);
        }

        // Main function to apply filters
        function applyFilters(pageNumber = 1) {
            showLoading(true);

            const form = document.getElementById('filtersForm');
            const formData = new FormData(form);

            // Update page number
            let pageNumberInput = form.querySelector('[name="pageNumber"]');
            if (pageNumberInput) {
                pageNumberInput.value = pageNumber;
            }

            // Collect filter values
            const filters = {
                name: form.querySelector('[name="name"]')?.value || '',
                specialization: form.querySelector('[name="specialization"]')?.value || '',
                city: form.querySelector('[name="city"]')?.value || '',
                yearsOfExperience: parseInt(form.querySelector('[name="yearsOfExperience"]')?.value) || 0,
                sortBy: form.querySelector('[name="sortBy"]')?.value || 'name_asc',
                pageNumber: pageNumber,
                pageSize: parseInt(form.querySelector('[name="pageSize"]')?.value) || 12
            };

            // Call AJAX endpoint
            fetch(`/Doctor/FilteredDoctors?${new URLSearchParams(filters).toString()}`)
                .then(response => response.json())
                .then(data => {
                    updateResults(data);
                    updateUrl(filters);
                    updateActiveFilters(filters);
                    showLoading(false);
                })
                .catch(error => {
                    console.error('Error:', error);
                    showLoading(false);
                    alert('An error occurred while filtering doctors.');
                });
        }

        // Function to update active filters display
        function updateActiveFilters(filters) {
            const activeFiltersContainer = document.getElementById('activeDoctorFilters');
            if (!activeFiltersContainer) return;

            let html = '';

            if (filters.name) {
                html += `<span class="active-filter">
                    <i class="fas fa-user"></i> Name: "${filters.name}"
                    <a href="#" onclick="removeFilter('name')" title="Remove">&times;</a>
                </span>`;
            }

            if (filters.specialization) {
                html += `<span class="active-filter">
                    <i class="fas fa-stethoscope"></i> Specialization: ${filters.specialization}
                    <a href="#" onclick="removeFilter('specialization')" title="Remove">&times;</a>
                </span>`;
            }

            if (filters.city) {
                html += `<span class="active-filter">
                    <i class="fas fa-map-marker-alt"></i> City: ${filters.city}
                    <a href="#" onclick="removeFilter('city')" title="Remove">&times;</a>
                </span>`;
            }

            if (filters.yearsOfExperience > 0) {
                html += `<span class="active-filter">
                    <i class="fas fa-briefcase"></i> Experience: ${filters.yearsOfExperience}+ years
                    <a href="#" onclick="removeFilter('yearsOfExperience')" title="Remove">&times;</a>
                </span>`;
            }

            if (filters.sortBy !== 'name_asc') {
                const sortText = filters.sortBy.replace('_', ' ').toUpperCase();
                html += `<span class="active-filter">
                    <i class="fas fa-sort-amount-down"></i> Sort: ${sortText}
                    <a href="#" onclick="removeFilter('sortBy')" title="Remove">&times;</a>
                </span>`;
            }

            activeFiltersContainer.innerHTML = html;
        }

        // Function to update results dynamically
        function updateResults(data) {
            const doctorsGrid = document.getElementById('doctorsGrid');
            const resultsCount = document.getElementById('doctorsResultsCount');
            const pagination = document.getElementById('doctorPagination');

            if (!doctorsGrid) return;

            // Update results count
            if (resultsCount) {
                let countHtml = `<strong>${data.totalCount}</strong> doctors found`;

                if (data.filtersApplied) {
                    countHtml += `<span class="filtered-count">(filtered)</span>`;
                }

                if (data.totalPages > 1) {
                    countHtml += `<span class="page-indicator">• Page ${data.pageNumber} of ${data.totalPages}</span>`;
                }

                resultsCount.innerHTML = countHtml;
            }

            // Update doctors grid
            if (data.doctors.length === 0) {
                doctorsGrid.innerHTML = `
                    <div class="no-results">
                        <div class="no-results-icon">
                            <i class="fas fa-user-md fa-4x"></i>
                        </div>
                        <h3>No doctors found</h3>
                        <p>Try adjusting your search or filters to find what you're looking for.</p>
                        <a href="@Url.Action("Index")" class="btn btn-primary">
                            <i class="fas fa-redo"></i> Reset Filters
                        </a>
                    </div>
                `;
            } else {
                let html = '';
                data.doctors.forEach(doctor => {
                    html += `
                        <div class="doctor-card-new">
                            <div class="doctor-card-header-new">
                                ${doctor.image ?
                                    `<img src="/files/Imgs/${doctor.image}" alt="${doctor.firstName} ${doctor.lastName}" class="doctor-image-new">` :
                                    `<div class="doctor-placeholder-icon"><i class="fas fa-user-md fa-4x"></i></div>`
                                }
                            </div>

                            <div class="doctor-card-body-new">
                                <div class="available-status">
                                    <i class="fas fa-circle available-dot"></i> Available Today
                                </div>
                                <h3 class="doctor-name">Dr. ${doctor.firstName} ${doctor.lastName}</h3>
                                <p class="doctor-specialization">${doctor.specialization}</p>

                                ${doctor.subSpecialization ?
                                    `<p class="doctor-subspecialization">${doctor.subSpecialization}</p>` : ''
                                }

                                <div class="doctor-meta-new">
                                    <div class="doctor-experience">
                                        <i class="fas fa-briefcase"></i>
                                        <span>${doctor.yearsOfExperience} years experience</span>
                                    </div>
                                    ${doctor.city ?
                                        `<div class="doctor-location">
                                            <i class="fas fa-map-marker-alt"></i>
                                            <span>${doctor.city}</span>
                                        </div>` : ''
                                    }
                                </div>

                                <div class="doctor-actions-new">
                                    <a href="/Doctor/Details/${doctor.id}" class="view-profile-link-new">
                                        <i class="fas fa-info-circle"></i> View Profile
                                    </a>
                                    <a href="/Appointment/Create?doctorId=${doctor.id}" class="book-now-link-new">
                                        <i class="fas fa-calendar-alt"></i> Book Now
                                    </a>
                                </div>
                            </div>
                        </div>
                    `;
                });
                doctorsGrid.innerHTML = html;
            }

            // Update pagination
            if (pagination && data.totalPages > 1) {
                let paginationHtml = '';

                if (data.pageNumber > 1) {
                    paginationHtml += `<a href="#" onclick="goToPage(${data.pageNumber - 1})" class="page-link">
                        <i class="fas fa-chevron-left"></i> Previous
                    </a>`;
                }

                for (let i = 1; i <= data.totalPages; i++) {
                    if (i === data.pageNumber) {
                        paginationHtml += `<span class="page-link active">${i}</span>`;
                    } else if (i === 1 || i === data.totalPages || (i >= data.pageNumber - 2 && i <= data.pageNumber + 2)) {
                        paginationHtml += `<a href="#" onclick="goToPage(${i})" class="page-link">${i}</a>`;
                    } else if (i === data.pageNumber - 3 || i === data.pageNumber + 3) {
                        paginationHtml += `<span class="page-dots">...</span>`;
                    }
                }

                if (data.pageNumber < data.totalPages) {
                    paginationHtml += `<a href="#" onclick="goToPage(${data.pageNumber + 1})" class="page-link">
                        Next <i class="fas fa-chevron-right"></i>
                    </a>`;
                }

                pagination.innerHTML = paginationHtml;
            }
        }

        // Function to update URL without page reload
        function updateUrl(filters) {
            const params = new URLSearchParams();

            if (filters.name) params.set('name', filters.name);
            if (filters.specialization) params.set('specialization', filters.specialization);
            if (filters.city) params.set('city', filters.city);
            if (filters.yearsOfExperience > 0) params.set('yearsOfExperience', filters.yearsOfExperience);
            if (filters.sortBy !== 'name_asc') params.set('sortBy', filters.sortBy);
            if (filters.pageNumber > 1) params.set('pageNumber', filters.pageNumber);
            if (filters.pageSize !== 12) params.set('pageSize', filters.pageSize);

            const newUrl = `${window.location.pathname}${params.toString() ? '?' + params.toString() : ''}`;
            window.history.replaceState({}, '', newUrl);
        }

        // Function to show/hide loading overlay
        function showLoading(show) {
            const overlay = document.getElementById('loadingOverlay');
            if (overlay) {
                overlay.style.display = show ? 'flex' : 'none';
            }
        }

        // Initialize view toggles
        document.addEventListener('DOMContentLoaded', function() {
            const viewBtns = document.querySelectorAll('.view-btn');
            const resultsGrid = document.getElementById('doctorsGridView');

            viewBtns.forEach(btn => {
                btn.addEventListener('click', function() {
                    const viewType = this.getAttribute('data-view');

                    // Update active button
                    viewBtns.forEach(b => b.classList.remove('active'));
                    this.classList.add('active');

                    // Handle different views
                    if (viewType === 'grid') {
                        resultsGrid.classList.add('active');
                    } else if (viewType === 'list') {
                        resultsGrid.classList.remove('active');
                    }
                });
            });

            // Initialize active filters based on current URL
            const urlParams = new URLSearchParams(window.location.search);
            const currentFilters = {
                name: urlParams.get('name') || '',
                specialization: urlParams.get('specialization') || '',
                city: urlParams.get('city') || '',
                yearsOfExperience: parseInt(urlParams.get('yearsOfExperience')) || 0,
                sortBy: urlParams.get('sortBy') || 'name_asc'
            };
            updateActiveFilters(currentFilters);
        });

        // Clear all filters function
        document.getElementById('clearDoctorFilters')?.addEventListener('click', function(e) {
            e.preventDefault();

            // Reset all form inputs
            const form = document.getElementById('filtersForm');
            form.reset();

            // Manually set default values
            form.querySelector('[name="yearsOfExperience"]').value = '0';
            form.querySelector('[name="sortBy"]').value = 'name_asc';
            form.querySelector('[name="pageNumber"]').value = '1';

            // Apply filters
            applyFilters(1);
        });
    </script>
}