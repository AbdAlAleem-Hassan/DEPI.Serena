@model IEnumerable<Serena.DAL.Entities.Appointment>
@{
    ViewData["Title"] = "My Doctors";
    Layout = "~/Views/Shared/_AccountLayout.cshtml";
}

@section Styles {
    <style>
        /* Main background */
        body {
            background-color: var(--light-gray);
        }

        .dark-mode body {
            background-color: #0f172a;
        }

        /* Page header */
        .page-header {
            display: flex;
            justify-content: space-between;
            align-items: center;
            margin-bottom: 2.5rem;
            padding: 0rem;
            padding-bottom: 1.5rem;
            border-bottom: 2px solid;
            border-image: linear-gradient(to right, #3b82f6, #10b981) 1;
            background: none;
        }

        .section-title {
            font-size: 2rem;
            font-weight: 700;
            color: var(--text-dark);
            border-bottom: 0px;
        }

        .dark-mode .page-header {
            border-bottom-color: linear-gradient(to right, #3b82f6, #10b981);
        }

        /* Doctors grid */
        .doctors-grid {
            display: grid;
            grid-template-columns: repeat(auto-fill, minmax(300px, 1fr));
            gap: 1.5rem;
            margin-top: 2rem;
        }

        @@media (max-width: 768px) {
            .doctors-grid {
                grid-template-columns: 1fr;
            }
        }

        /* Doctor card */
        .doctor-card {
            background: var(--primary-white);
            border-radius: var(--border-radius);
            padding: 1.5rem;
            box-shadow: var(--shadow);
            border: 1px solid rgba(0, 0, 0, 0.05);
            transition: var(--transition);
            position: relative;
            overflow: hidden;
        }

        .doctor-card:hover {
            transform: translateY(-5px);
            box-shadow: 0 10px 25px -5px rgba(0, 0, 0, 0.1);
        }

        .dark-mode .doctor-card {
            background-color: var(--charcoal);
            border-color: rgba(255, 255, 255, 0.05);
        }

        /* Doctor header */
        .doctor-header {
            display: flex;
            align-items: flex-start;
            gap: 1.25rem;
            margin-bottom: 1.5rem;
        }

        .doctor-avatar {
            width: 80px;
            height: 80px;
            border-radius: 50%;
            background: linear-gradient(to right, #3b82f6, #10b981);
            display: flex;
            align-items: center;
            justify-content: center;
            color: white;
            font-size: 2rem;
            font-weight: 600;
            flex-shrink: 0;
            overflow: hidden;
        }

        .doctor-avatar img {
            width: 100%;
            height: 100%;
            object-fit: cover;
        }

        .doctor-info {
            flex: 1;
        }

        .doctor-name {
            font-size: 1.3rem;
            font-weight: 700;
            color: var(--text-dark);
            margin: 0 0 0.5rem 0;
            line-height: 1.3;
        }

        .dark-mode .doctor-name {
            color: #f8fafc;
        }

        .doctor-specialty {
            color: var(--accent-blue);
            font-weight: 600;
            font-size: 0.95rem;
            margin: 0 0 0.25rem 0;
        }

        .doctor-subspecialty {
            color: #6b7280;
            font-size: 0.9rem;
            margin: 0;
        }

        .dark-mode .doctor-subspecialty {
            color: #94a3b8;
        }

        /* Doctor stats */
        .doctor-stats {
            display: grid;
            grid-template-columns: repeat(3, 1fr);
            gap: 1rem;
            margin-bottom: 1.5rem;
            padding: 1rem;
            background: rgba(0, 0, 0, 0.02);
            border-radius: 8px;
        }

        .dark-mode .doctor-stats {
            background: rgba(255, 255, 255, 0.03);
        }

        .stat-item {
            text-align: center;
        }

        .stat-value {
            display: block;
            font-size: 1.1rem;
            font-weight: 700;
            color: var(--text-dark);
        }

        .dark-mode .stat-value {
            color: #f8fafc;
        }

        .stat-label {
            display: block;
            font-size: 0.8rem;
            color: #6b7280;
            margin-top: 0.25rem;
        }

        .dark-mode .stat-label {
            color: #94a3b8;
        }

        /* Hospital info */
        .hospital-info {
            background: rgba(59, 130, 246, 0.05);
            border-radius: 8px;
            padding: 1rem;
            margin-bottom: 1.5rem;
            border-left: 3px solid var(--accent-blue);
        }

        .dark-mode .hospital-info {
            background: rgba(59, 130, 246, 0.1);
        }

        .hospital-name {
            font-weight: 600;
            color: var(--text-dark);
            margin: 0 0 0.5rem 0;
            display: flex;
            align-items: center;
            gap: 0.5rem;
        }

        .dark-mode .hospital-name {
            color: #f8fafc;
        }

        .hospital-address {
            color: #6b7280;
            font-size: 0.9rem;
            margin: 0;
            display: flex;
            align-items: center;
            gap: 0.5rem;
        }

        .dark-mode .hospital-address {
            color: #94a3b8;
        }

        /* Appointment history */
        .appointment-history {
            margin-top: 1.5rem;
        }

        .history-title {
            font-size: 0.95rem;
            font-weight: 600;
            color: var(--text-dark);
            margin: 0 0 1rem 0;
            display: flex;
            align-items: center;
            gap: 0.5rem;
        }

        .dark-mode .history-title {
            color: #f8fafc;
        }

        .history-list {
            display: flex;
            flex-direction: column;
            gap: 0.75rem;
        }

        .history-item {
            display: flex;
            justify-content: space-between;
            align-items: center;
            padding: 0.75rem;
            background: rgba(0, 0, 0, 0.02);
            border-radius: 6px;
            border-left: 3px solid #10b981;
        }

        .dark-mode .history-item {
            background: rgba(255, 255, 255, 0.03);
        }

        .history-item.cancelled {
            border-left-color: #ef4444;
        }

        .history-date {
            font-weight: 600;
            color: var(--text-dark);
            font-size: 0.95rem;
        }

        .dark-mode .history-date {
            color: #f8fafc;
        }

        .history-time {
            color: #6b7280;
            font-size: 0.85rem;
        }

        .dark-mode .history-time {
            color: #94a3b8;
        }

        .history-status {
            font-size: 0.8rem;
            padding: 0.25rem 0.75rem;
            border-radius: 99px;
            font-weight: 600;
        }

        .status-completed {
            background: #dcfce7;
            color: #166534;
        }

        .status-cancelled {
            background: #fee2e2;
            color: #991b1b;
        }

        .dark-mode .status-completed {
            background: rgba(22, 101, 52, 0.2);
            color: #86efac;
        }

        .dark-mode .status-cancelled {
            background: rgba(153, 27, 27, 0.2);
            color: #fca5a5;
        }

        /* Doctor actions */
        .doctor-actions {
            display: flex;
            gap: 0.75rem;
            margin-top: 1.5rem;
        }

        .btn-action {
            flex: 1;
            padding: 0.75rem;
            border-radius: 8px;
            border: 1px solid var(--light-gray);
            background: var(--primary-white);
            color: var(--text-dark);
            font-weight: 600;
            cursor: pointer;
            transition: var(--transition);
            display: flex;
            align-items: center;
            justify-content: center;
            gap: 0.5rem;
            font-size: 0.9rem;
        }

        .btn-action:hover {
            background: var(--accent-blue);
            color: white;
            border-color: var(--accent-blue);
        }

        .btn-action.book {
            background: var(--accent-blue);
            color: white;
            border-color: var(--accent-blue);
        }

        .btn-action.book:hover {
            background: #2563eb;
            border-color: #2563eb;
        }

        .btn-action.review:hover {
            background: #f59e0b;
            color: white;
            border-color: #f59e0b;
        }

        .dark-mode .btn-action {
            background: #1e293b;
            border-color: #334155;
            color: #f8fafc;
        }

        /* Empty state */
        .empty-state {
            text-align: center;
            padding: 4rem 2rem;
            color: #6b7280;
            grid-column: 1 / -1;
        }

        .empty-state i {
            font-size: 4rem;
            margin-bottom: 1rem;
            opacity: 0.5;
        }

        .empty-state h3 {
            font-size: 1.5rem;
            margin-bottom: 0.5rem;
            color: var(--text-dark);
        }

        .empty-state p {
            max-width: 500px;
            margin: 0 auto 1.5rem;
        }

        .dark-mode .empty-state {
            color: #9ca3af;
        }

        .dark-mode .empty-state h3 {
            color: #f8fafc;
        }

        /* Loading skeleton */
        .loading-skeleton {
            display: none;
        }

        .doctor-card.skeleton {
            animation: pulse 1.5s infinite;
        }

        @@keyframes pulse {

            0%,
            100% {
                opacity: 1;
            }

            50% {
                opacity: 0.5;
            }
        }

        /* Doctor rating */
        .doctor-rating {
            display: flex;
            align-items: center;
            gap: 0.5rem;
            margin-top: 0.5rem;
        }

        .rating-stars {
            color: #fbbf24;
            font-size: 0.9rem;
        }

        .rating-value {
            font-weight: 600;
            color: var(--text-dark);
            font-size: 0.9rem;
        }

        .dark-mode .rating-value {
            color: #f8fafc;
        }

        .rating-count {
            color: #6b7280;
            font-size: 0.85rem;
        }

        .dark-mode .rating-count {
            color: #94a3b8;
        }

        /* Filter tabs */
        .filter-tabs {
            display: flex;
            gap: 0.5rem;
            margin-bottom: 2rem;
            flex-wrap: wrap;
        }

        .filter-tab {
            padding: 0.5rem 1.25rem;
            border-radius: 99px;
            border: 1px solid var(--light-gray);
            background: var(--primary-white);
            color: var(--text-dark);
            font-weight: 500;
            cursor: pointer;
            transition: var(--transition);
            font-size: 0.9rem;
        }

        .filter-tab:hover {
            border-color: var(--accent-blue);
            color: var(--accent-blue);
        }

        .filter-tab.active {
            background: var(--accent-blue);
            color: white;
            border-color: var(--accent-blue);
        }

        .dark-mode .filter-tab {
            background: #1e293b;
            border-color: #334155;
            color: #f8fafc;
        }

        .dark-mode .filter-tab.active {
            background: var(--accent-blue);
            border-color: var(--accent-blue);
        }
    </style>
}

<div class="container" style="padding-top: 100px; padding-bottom: 50px;">
    <div class="page-header">
        <h1 class="section-title" style="margin: 0;">My Doctors</h1>
        <a asp-controller="Doctor" asp-action="Index" class="btn btn-primary">
            <i class="fas fa-search"></i> Find New Doctor
        </a>
    </div>

    <div class="filter-tabs">
        <button class="filter-tab active" onclick="filterDoctors('all')">All Doctors</button>
        <button class="filter-tab" onclick="filterDoctors('recent')">Recent</button>
        <button class="filter-tab" onclick="filterDoctors('specialty')">By Specialty</button>
    </div>

    @if (Model?.Any() == true)
    {
        @* Group appointments by doctor to get unique doctors *@
            var doctors = Model
    .Where(a => a.Doctor != null)
    .GroupBy(a => a.Doctor.Id)
    .Select(g => new
    {
        Doctor = g.Key,
        DoctorInfo = g.First().Doctor,
        Appointments = g.OrderByDescending(a => a.Schedule?.Date ?? DateTime.MinValue).ToList(),
        LastAppointment = g.Max(a => a.Schedule?.Date),
        AppointmentCount = g.Count()
    })
    .OrderByDescending(d => d.LastAppointment)
    .ToList();

        <div class="doctors-grid" id="doctorsContainer">
            @foreach (var doctorGroup in doctors)
            {
                var doctor = doctorGroup.DoctorInfo;
                var appointments = doctorGroup.Appointments;
                var lastAppointment = doctorGroup.LastAppointment;
                var appointmentCount = doctorGroup.AppointmentCount;

                <div class="doctor-card" data-doctor-id="@doctor.Id" data-specialty="@doctor.Specialization?.ToLower()"
                    data-last-appointment="@lastAppointment?.ToString("yyyy-MM-dd")">
                    <div class="doctor-header">
                        <div class="doctor-avatar">
                            @if (!string.IsNullOrEmpty(doctor.ImageUrl))
                            {
                                <img src="@doctor.ImageUrl" alt="Doctor Photo" />
                            }
                            else
                            {
                                @($"{doctor.FirstName?[0]}{doctor.LastName?[0]}")
                            }
                        </div>
                        <div class="doctor-info">
                            <h3 class="doctor-name">Dr. @doctor.FirstName @doctor.LastName</h3>
                            <p class="doctor-specialty">@doctor.Specialization</p>
                            @if (!string.IsNullOrEmpty(doctor.SubSpecialization))
                            {
                                <p class="doctor-subspecialty">@doctor.SubSpecialization</p>
                            }

                            @* Doctor Rating (you can add this if you have review data) *@
                                    @* <div class="doctor-rating">
                                <div class="rating-stars">
                                    <i class="fas fa-star"></i>
                                    <i class="fas fa-star"></i>
                                    <i class="fas fa-star"></i>
                                    <i class="fas fa-star-half-alt"></i>
                                    <i class="far fa-star"></i>
                                </div>
                                <span class="rating-value">4.2</span>
                                <span class="rating-count">(12 reviews)</span>
                            </div> *@
                        </div>
                    </div>

                    <div class="doctor-stats">
                        <div class="stat-item">
                            <span class="stat-value">@appointmentCount</span>
                            <span class="stat-label">Visits</span>
                        </div>
                        <div class="stat-item">
                            <span class="stat-value">@doctor.YearsOfExperience</span>
                            <span class="stat-label">Years Exp</span>
                        </div>
                        <div class="stat-item">
                            <span class="stat-value">
                                @if (lastAppointment.HasValue)
                                {
                                    @((DateTime.Now - lastAppointment.Value).Days < 30 ? "Recent" : "Past")
                                }
                                else
                                {
                                    @:Past
                                }
                            </span>
                            <span class="stat-label">Last Visit</span>
                        </div>
                    </div>

                    @if (doctor.Hospital != null)
                    {
                        <div class="hospital-info">
                            <p class="hospital-name">
                                <i class="fas fa-hospital"></i> @doctor.Hospital.Name
                            </p>
                            @if (!string.IsNullOrEmpty(doctor.HospitalAddress?.Street))
                            {
                                <p class="hospital-address">
                                    <i class="fas fa-map-marker-alt"></i>
                                    @doctor.HospitalAddress.Street, @doctor.City
                                </p>
                            }
                        </div>
                    }

                    @if (appointments.Any())
                    {
                        <div class="appointment-history">
                            <h4 class="history-title">
                                <i class="fas fa-history"></i> Appointment History
                            </h4>
                            <div class="history-list">
                                @foreach (var appointment in appointments.Take(3))
                                {
                                    var scheduleDate = appointment.Schedule?.Date ?? DateTime.Now;
                                    var isCompleted = scheduleDate < DateTime.Now;

                                    // التحقق مما إذا كان الموعد محذوفًا
                                    var isCancelled = appointment.IsDeleted; // أو حسب الخاصية في كيان Appointment

                                    <div class="history-item @(isCancelled ? "cancelled" : isCompleted ? "" : "upcoming")">
                                        <div>
                                            <div class="history-date">@scheduleDate.ToString("dd MMM yyyy")</div>
                                            <div class="history-time">@scheduleDate.ToString("hh:mm tt")</div>
                                        </div>
                                        <span
                                            class="history-status @(isCancelled ? "status-cancelled" : isCompleted ? "status-completed" : "status-upcoming")">
                                            @(isCancelled ? "Cancelled" : isCompleted ? "Completed" : "Upcoming")
                                        </span>
                                    </div>
                                }
                            </div>
                        </div>
                    }

                    <div class="doctor-actions">
                        <button class="btn-action book" onclick="bookAppointment('@doctor.Id')">
                            <i class="fas fa-calendar-plus"></i> Book Again
                        </button>
                        <button class="btn-action review" onclick="leaveReview('@doctor.Id')">
                            <i class="fas fa-star"></i> Review
                        </button>
                        <button class="btn-action" onclick="viewDoctorProfile('@doctor.Id')">
                            <i class="fas fa-user-md"></i> Profile
                        </button>
                    </div>
                </div>
            }
        </div>
    }
    else
    {
        <div class="empty-state">
            <i class="fas fa-user-md"></i>
            <h3>No Doctors Found</h3>
            <p>You haven't booked any appointments with doctors yet. Find a doctor and book your first appointment!</p>
            <a asp-controller="Doctor" asp-action="Index" class="btn btn-primary" style="display: flex; align-items: center; justify-content: center; width: fit-content; margin: auto;">
                <i class="fas fa-search" style="font-size: 1rem; margin-bottom: 0rem;"></i>
                <span>Find a Doctor</span>
            </a>
        </div>
    }

    <!-- Loading Skeleton -->
    <div id="loadingSkeleton" class="loading-skeleton doctors-grid">
        <div class="doctor-card skeleton">
            <div class="doctor-header">
                <div class="doctor-avatar" style="background: #e5e7eb;"></div>
                <div class="doctor-info">
                    <div
                        style="background: #e5e7eb; height: 24px; width: 150px; border-radius: 4px; margin-bottom: 8px;">
                    </div>
                    <div
                        style="background: #e5e7eb; height: 18px; width: 120px; border-radius: 4px; margin-bottom: 4px;">
                    </div>
                    <div style="background: #e5e7eb; height: 16px; width: 100px; border-radius: 4px;"></div>
                </div>
            </div>
            <div class="doctor-stats">
                <div style="background: #e5e7eb; height: 40px; border-radius: 8px;"></div>
                <div style="background: #e5e7eb; height: 40px; border-radius: 8px;"></div>
                <div style="background: #e5e7eb; height: 40px; border-radius: 8px;"></div>
            </div>
            <div style="background: #e5e7eb; height: 80px; border-radius: 8px; margin: 1.5rem 0;"></div>
            <div style="display: flex; gap: 0.75rem;">
                <div style="background: #e5e7eb; height: 40px; flex: 1; border-radius: 8px;"></div>
                <div style="background: #e5e7eb; height: 40px; flex: 1; border-radius: 8px;"></div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        document.addEventListener('DOMContentLoaded', function () {
            // Initialize page
            console.log('My Doctors page loaded');
        });

        // Filter doctors function
        function filterDoctors(filterType) {
            const tabs = document.querySelectorAll('.filter-tab');
            tabs.forEach(tab => tab.classList.remove('active'));

            const activeTab = event.target;
            activeTab.classList.add('active');

            const doctors = document.querySelectorAll('.doctor-card');
            const now = new Date();
            const thirtyDaysAgo = new Date(now.setDate(now.getDate() - 30));

            doctors.forEach(doctor => {
                doctor.style.display = 'block';

                switch (filterType) {
                    case 'recent':
                        const lastAppointment = doctor.getAttribute('data-last-appointment');
                        if (lastAppointment) {
                            const appointmentDate = new Date(lastAppointment);
                            if (appointmentDate < thirtyDaysAgo) {
                                doctor.style.display = 'none';
                            }
                        }
                        break;

                    case 'specialty':
                        // You can implement specialty filtering based on data attribute
                        // For now, just show all
                        break;

                    default:
                        // Show all
                        break;
                }
            });

            // Check if any doctors are visible
            const visibleDoctors = Array.from(doctors).filter(d => d.style.display !== 'none');
            if (visibleDoctors.length === 0) {
                showNoResultsMessage(filterType);
            } else {
                removeNoResultsMessage();
            }
        }

        function showNoResultsMessage(filterType) {
            removeNoResultsMessage();

            const container = document.getElementById('doctorsContainer');
            const message = document.createElement('div');
            message.className = 'empty-state';
            message.innerHTML = `
                    <i class="fas fa-filter"></i>
                    <h3>No Doctors Found</h3>
                    <p>No doctors match your filter criteria. Try a different filter.</p>
                `;

            container.appendChild(message);
        }

        function removeNoResultsMessage() {
            const existingMessage = document.querySelector('#doctorsContainer .empty-state');
            if (existingMessage) {
                existingMessage.remove();
            }
        }

        // Action functions
        function bookAppointment(doctorId) {
            // Redirect to doctor's profile to book appointment
            window.location.href = `/Doctor/DoctorProfile/${doctorId}`;
        }

        function leaveReview(doctorId) {
            // Open review modal or redirect to review page
            console.log('Leaving review for doctor:', doctorId);

            // You can implement a modal or redirect:
            // window.location.href = `/Review/Create?doctorId=${doctorId}`;

            // For now, show a toast
            showToast('Review feature coming soon!', 'info');
        }

        function viewDoctorProfile(doctorId) {
            // Redirect to doctor's public profile
            window.location.href = `/Doctor/DoctorProfile/${doctorId}`;
        }

        function showAllAppointments(doctorId) {
            // You can implement a modal to show all appointments
            console.log('Showing all appointments for doctor:', doctorId);

            // For now, redirect to appointments filtered by doctor
            window.location.href = `/Appointment?doctorId=${doctorId}`;
        }

        // Toast notification function
        function showToast(message, type = 'info') {
            const toaster = document.getElementById('toasterContainer');
            if (toaster && window.toastManager) {
                window.toastManager[type](message);
            } else {
                // Fallback to alert
                if (type === 'error') {
                    alert('Error: ' + message);
                } else {
                    alert(message);
                }
            }
        }
    </script>
}