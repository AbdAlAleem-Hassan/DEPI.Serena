﻿@using Microsoft.AspNetCore.Identity
@using Serena.DAL.Entities
@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager

@{
    var user = await UserManager.GetUserAsync(User);
    var firstName = user?.FirstName ?? user?.Email?.Split('@')[0];
    var lastName = user?.LastName ?? "";
    // var userInitials = $"{firstName?[0]}{lastName?[0]}";

    string IsActive(string controller, string action)
    {
        var routeData = ViewContext.RouteData.Values;
        var currentController = routeData["controller"] as string;
        var currentAction = routeData["action"] as string;

        return string.Equals(currentController, controller, StringComparison.OrdinalIgnoreCase) &&
        string.Equals(currentAction, action, StringComparison.OrdinalIgnoreCase) ? "active" : "";
    }
}

