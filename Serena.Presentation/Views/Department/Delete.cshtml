@model Serena.BLL.Models.Departments.DepartmentDTO

@{
    ViewData["Title"] = "Delete Department";
}

<div class="row">
    <div class="col-md-6 offset-md-3">
        <div class="card shadow mb-4 border-left-danger">
            <div class="card-header py-3">
                <h6 class="m-0 font-weight-bold text-danger">Delete Department</h6>
            </div>
            <div class="card-body">
                <h4 class="small font-weight-bold">Are you sure you want to delete this department?</h4>
                <p class="mb-4">This action cannot be undone.</p>
                
                <dl class="row">
                    <dt class="col-sm-4">
                        @Html.DisplayNameFor(model => model.Name)
                    </dt>
                    <dd class="col-sm-8">
                        @Html.DisplayFor(model => model.Name)
                    </dd>
                    <dt class="col-sm-4">
                        @Html.DisplayNameFor(model => model.HospitalName)
                    </dt>
                    <dd class="col-sm-8">
                        @Html.DisplayFor(model => model.HospitalName)
                    </dd>
                </dl>
                
                <form asp-action="Delete">
                    <input type="hidden" asp-for="Id" />
                    <div class="mt-4 text-center">
                        <input type="submit" value="Delete" class="btn btn-danger" />
                        <a asp-action="Index" class="btn btn-secondary">Cancel</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
