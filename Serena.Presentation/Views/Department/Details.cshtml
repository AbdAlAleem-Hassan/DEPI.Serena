@model Serena.BLL.Models.Departments.DepartmentDTO

@{
    ViewData["Title"] = "Department Details";
}

<div class="row">
    <div class="col-md-6 offset-md-3">
        <div class="card shadow mb-4">
            <div class="card-header py-3">
                <h6 class="m-0 font-weight-bold text-primary">Department Details</h6>
            </div>
            <div class="card-body">
                <dl class="row">
                    <dt class="col-sm-4">
                        @Html.DisplayNameFor(model => model.Name)
                    </dt>
                    <dd class="col-sm-8">
                        @Html.DisplayFor(model => model.Name)
                    </dd>
                    <dt class="col-sm-4">
                        @Html.DisplayNameFor(model => model.HospitalName)
                    </dt>
                    <dd class="col-sm-8">
                        @Html.DisplayFor(model => model.HospitalName)
                    </dd>
                    <dt class="col-sm-4">
                        @Html.DisplayNameFor(model => model.DoctorsNumber)
                    </dt>
                    <dd class="col-sm-8">
                        @Html.DisplayFor(model => model.DoctorsNumber)
                    </dd>
                </dl>
                <div class="mt-4 text-center">
                    <a asp-action="Edit" asp-route-id="@Model?.Id" class="btn btn-primary">Edit</a>
                    <a asp-action="Index" class="btn btn-secondary">Back to List</a>
                </div>
            </div>
        </div>
    </div>
</div>
