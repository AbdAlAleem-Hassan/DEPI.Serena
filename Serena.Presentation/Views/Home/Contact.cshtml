@model Serena.DAL.Entities.ContactUs
@{
    ViewData["Title"] = "Contact Us - Serena Healthcare";
}

<!-- Page Header with Shapes -->
<section class="page-header">
    <div class="page-header-background">
        <div class="page-header-orbs">
            <div class="page-header-orb"></div>
            <div class="page-header-orb"></div>
            <div class="page-header-orb"></div>
        </div>
    </div>
    <div class="container">
        <h1 class="page-title" data-en="Contact Us" data-ar="اتصل بنا">Contact Us</h1>
        <p class="page-subtitle" data-en="Get in touch with us for any inquiries or support"
           data-ar="تواصل معنا لأي استفسارات أو دعم">
            Get in touch with us for any inquiries or support
        </p>
    </div>
</section>

<!-- Contact Section -->
<section class="contact">
    <div class="container">
        <div class="contact-container">
            <div class="contact-form">
                <h2 data-en="Send Us a Message" data-ar="أرسل لنا رسالة">Send Us a Message</h2>
                <form asp-action="ContactUs" asp-controller="ContactUs" method="post">
                    @Html.AntiForgeryToken()

                    <div class="form-group">
                        <label class="form-label" asp-for="Name" data-en="Full Name" data-ar="الاسم الكامل">Full Name</label>
                        <input type="text" asp-for="Name" class="form-input" placeholder="Enter your name"
                               data-en="Enter your name" data-ar="أدخل اسمك" required>
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <label class="form-label" asp-for="Email" data-en="Email Address"
                               data-ar="عنوان البريد الإلكتروني">Email Address</label>
                        <input type="email" asp-for="Email" class="form-input" placeholder="Enter your email"
                               data-en="Enter your email" data-ar="أدخل بريدك الإلكتروني" required>
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <label class="form-label" asp-for="Subject" data-en="Subject" data-ar="الموضوع">Subject</label>
                        <input type="text" asp-for="Subject" class="form-input" placeholder="Enter subject"
                               data-en="Enter subject" data-ar="أدخل الموضوع" required>
                        <span asp-validation-for="Subject" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <label class="form-label" asp-for="Message" data-en="Message" data-ar="الرسالة">Message</label>
                        <textarea asp-for="Message" class="form-textarea" placeholder="Enter your message"
                                  data-en="Enter your message" data-ar="أدخل رسالتك" rows="5" required></textarea>
                        <span asp-validation-for="Message" class="text-danger"></span>
                    </div>

                    <button type="submit" class="btn btn-primary" data-en="Send Message" data-ar="إرسال الرسالة">
                        Send Message
                    </button>
                </form>
            </div>

            <div class="contact-info">
                <h2 data-en="Get In Touch" data-ar="ابق على اتصال">Get In Touch</h2>
                <div class="contact-methods">
                    <div class="contact-method">
                        <div class="contact-icon">
                            <i class="fas fa-map-marker-alt"></i>
                        </div>
                        <div class="contact-details">
                            <h3 data-en="Our Address" data-ar="عنواننا">Our Address</h3>
                            <p data-en="123 Healthcare St, Medical City, HC 12345"
                               data-ar="123 شارع الرعاية الصحية، المدينة الطبية، HC 12345">
                                123 Healthcare St, Medical City, HC 12345
                            </p>
                        </div>
                    </div>
                    <div class="contact-method">
                        <div class="contact-icon">
                            <i class="fas fa-phone"></i>
                        </div>
                        <div class="contact-details">
                            <h3 data-en="Phone Number" data-ar="رقم الهاتف">Phone Number</h3>
                            <p>+1 234 567 8900</p>
                            <p>+1 234 567 8901</p>
                        </div>
                    </div>
                    <div class="contact-method">
                        <div class="contact-icon">
                            <i class="fas fa-envelope"></i>
                        </div>
                        <div class="contact-details">
                            <h3 data-en="Email Address" data-ar="عنوان البريد الإلكتروني">Email Address</h3>
                            <p>info@serena.com</p>
                            <p>support@serena.com</p>
                        </div>
                    </div>
                    <div class="contact-method">
                        <div class="contact-icon">
                            <i class="fas fa-clock"></i>
                        </div>
                        <div class="contact-details">
                            <h3 data-en="Working Hours" data-ar="ساعات العمل">Working Hours</h3>
                            <p data-en="Mon-Fri: 9AM-6PM" data-ar="الإثنين-الجمعة: 9 صباحًا - 6 مساءً">Mon-Fri: 9AM-6PM</p>
                            <p data-en="Sat: 10AM-4PM" data-ar="السبت: 10 صباحًا - 4 مساءً">Sat: 10AM-4PM</p>
                        </div>
                    </div>
                </div>

                <div class="emergency-contact">
                    <h3 data-en="Emergency Contact" data-ar="الاتصال في حالات الطوارئ">Emergency Contact</h3>
                    <p data-en="For medical emergencies, please call our 24/7 helpline:"
                       data-ar="لحالات الطوارئ الطبية، يرجى الاتصال بخط المساعدة على مدار 24 ساعة:">
                        For medical emergencies, please call our 24/7 helpline:
                    </p>
                    <div class="emergency-number">
                        <i class="fas fa-phone"></i>
                        <span>1-800-SERENA1</span>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<!-- Map Section -->
<section class="map-section">
    <div class="container">
        <h2 class="section-title" data-en="Find Us" data-ar="ابحث عنا">Find Us</h2>
        <div class="map-container">
            <div id="map"></div>
        </div>
    </div>
</section>

<!-- FAQ Section -->
<section class="faq">
    <div class="container">
        <h2 class="section-title" data-en="Frequently Asked Questions" data-ar="الأسئلة الشائعة">
            Frequently Asked Questions
        </h2>
        <div class="faq-container">
            <div class="faq-item">
                <button class="faq-question">
                    <span data-en="How do I book an appointment through Serena?"
                          data-ar="كيف أحجز موعدًا من خلال سيرينا؟">How do I book an appointment through Serena?</span>
                    <i class="fas fa-chevron-down"></i>
                </button>
                <div class="faq-answer">
                    <p data-en="You can book appointments through our website or mobile app by selecting your preferred doctor, choosing an available time slot, and confirming your booking. You'll receive a confirmation email with all the details."
                       data-ar="يمكنك حجز المواعيد من خلال موقعنا على الويب أو تطبيق الهاتف المحمول عن طريق اختيار الطبيب المفضل لديك، واختيار فترة زمنية متاحة، وتأكيد الحجز الخاص بك. سوف تتلقى رسالة تأكيد بالبريد الإلكتروني مع جميع التفاصيل.">
                        You can book appointments through our website or mobile app by selecting your preferred doctor,
                        choosing an available time slot, and confirming your booking. You'll receive a confirmation
                        email with all the details.
                    </p>
                </div>
            </div>
            <div class="faq-item">
                <button class="faq-question">
                    <span data-en="Is my medical information secure with Serena?"
                          data-ar="هل معلوماتي الطبية آمنة مع سيرينا؟">Is my medical information secure with Serena?</span>
                    <i class="fas fa-chevron-down"></i>
                </button>
                <div class="faq-answer">
                    <p data-en="Yes, we use end-to-end encryption and follow strict data protection protocols to ensure your medical information remains private and secure. We comply with all relevant healthcare data protection regulations."
                       data-ar="نعم، نستخدم التشفير من طرف إلى طرف ونتبع بروتوكولات حماية البيانات الصارمة لضمان بقاء معلوماتك الطبية خاصة وآمنة. نحن نلتزم بجميع لوائح حماية بيانات الرعاية الصحية ذات الصلة.">
                        Yes, we use end-to-end encryption and follow strict data protection protocols to ensure your
                        medical information remains private and secure. We comply with all relevant healthcare data
                        protection regulations.
                    </p>
                </div>
            </div>
            <div class="faq-item">
                <button class="faq-question">
                    <span data-en="How can hospitals partner with Serena?"
                          data-ar="كيف يمكن للمستشفيات الشراكة مع سيرينا؟">How can hospitals partner with Serena?</span>
                    <i class="fas fa-chevron-down"></i>
                </button>
                <div class="faq-answer">
                    <p data-en="Hospitals interested in partnering with Serena can contact our partnership team through the form on this page or email partnerships@serena.com. Our team will guide you through the onboarding process."
                       data-ar="يمكن للمستشفيات المهتمة بالشراكة مع سيرينا الاتصال بفريق الشراكة لدينا من خلال النموذج الموجود في هذه الصفحة أو البريد الإلكتروني partnerships@serena.com. سيرشدك فريقنا خلال عملية الانضمام.">
                        Hospitals interested in partnering with Serena can contact our partnership team through the form
                        on this page or email partnerships@serena.com. Our team will guide you through the onboarding
                        process.
                    </p>
                </div>
            </div>
            <div class="faq-item">
                <button class="faq-question">
                    <span data-en="What should I do in case of technical issues?"
                          data-ar="ماذا يجب أن أفعل في حالة وجود مشاكل فنية؟">What should I do in case of technical issues?</span>
                    <i class="fas fa-chevron-down"></i>
                </button>
                <div class="faq-answer">
                    <p data-en="If you encounter any technical issues, please contact our support team at support@serena.com or call our technical support line at +1 234 567 8901. Our team is available to assist you during business hours."
                       data-ar="إذا واجهت أي مشاكل فنية، يرجى الاتصال بفريق الدعم لدينا على support@serena.com أو الاتصال بخط الدعم الفني على +1 234 567 8901. فريقنا متاح لمساعدتك خلال ساعات العمل.">
                        If you encounter any technical issues, please contact our support team at support@serena.com or
                        call our technical support line at +1 234 567 8901. Our team is available to assist you during
                        business hours.
                    </p>
                </div>
            </div>
        </div>
    </div>
</section>

@section Scripts {
    <link rel="stylesheet" href="https://unpkg.com/leaflet@1.9.4/dist/leaflet.css"
          integrity="sha256-p4NxAoJBhIIN+hmNHrzRCf9tD/miZyoHS5obTRR9BMY=" crossorigin="" />
    <script src="https://unpkg.com/leaflet@1.9.4/dist/leaflet.js"
            integrity="sha256-20nQCchB9co0qIjJZRGuk2/Z9VM+kNiyxNV1lvTlZBo=" crossorigin=""></script>
    <script src="~/js/map.js"></script>

    <!-- jQuery Validation -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validate/1.19.3/jquery.validate.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validation-unobtrusive/3.2.12/jquery.validate.unobtrusive.min.js"></script>

    <script>
        document.addEventListener('DOMContentLoaded', function() {
            // Initialize map
            if (typeof initializeContactMap === 'function') {
                initializeContactMap();
            }

            // FAQ Toggle
            document.querySelectorAll('.faq-question').forEach(button => {
                button.addEventListener('click', () => {
                    const faqItem = button.parentElement;
                    faqItem.classList.toggle('active');

                    const icon = button.querySelector('i');
                    if (faqItem.classList.contains('active')) {
                        icon.classList.remove('fa-chevron-down');
                        icon.classList.add('fa-chevron-up');
                    } else {
                        icon.classList.remove('fa-chevron-up');
                        icon.classList.add('fa-chevron-down');
                    }
                });
            });

            // Handle form submission
            const contactForm = document.querySelector('form');
            if (contactForm) {
                contactForm.addEventListener('submit', function(e) {
                    // You can add custom validation here if needed
                    console.log('Form submitted');
                });
            }
        });
    </script>
}

