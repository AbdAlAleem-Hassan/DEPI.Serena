                    <p>No doctors available yet. Be the first to register!</p>
                </div>
            }
        </div>

        <div class="text-center">
            <a asp-controller="Doctor" asp-action="Index" class="view-all-btn">
                <span>View All Doctors</span>
                <i class="fas fa-arrow-right"></i>
            </a>
        </div>

    </div>
</section>

