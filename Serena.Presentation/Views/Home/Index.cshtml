@model Serena.BLL.Models.Home.HomeIndexViewModel
@{
    ViewData["Title"] = "Serena - Next-Generation Healthcare";
}

@section Styles {
    <link rel="stylesheet" href="~/css/index.css">
    <style>
        a {
            text-decoration: none;
            color: inherit;
        }

        /* Hospital Cards Styling */
        .hospitals-grid {
            display: grid;
            grid-template-columns: repeat(auto-fill, minmax(300px, 1fr));
            gap: 30px;
            margin-bottom: 40px;
        }

        .hospital-card-link {
            text-decoration: none;
            color: inherit;
            display: block;
        }

        .hospital-card {
            background: #ffffff;
            border-radius: 16px;
            overflow: hidden;
            box-shadow: 0 6px 20px rgba(0, 0, 0, 0.08);
            transition: all 0.3s ease;
            border: 1px solid #e9ecef;
            height: 100%;
            display: flex;
            flex-direction: column;
        }

        .hospital-card:hover {
            transform: translateY(-8px);
            box-shadow: 0 12px 30px rgba(0, 0, 0, 0.15);
        }

        .hospital-card-header {
            background: linear-gradient(135deg, #3b82f6, #8b5cf6);
            height: 160px;
            display: flex;
            align-items: center;
            justify-content: center;
            position: relative;
            overflow: hidden;
        }

        .hospital-card-header::before {
            content: '';
            position: absolute;
            top: 0;
            left: 0;
            right: 0;
            bottom: 0;
            background: url('data:image/svg+xml,<svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 100 100" preserveAspectRatio="none" opacity="0.1"><path d="M0,50 Q25,40 50,50 T100,50 L100,100 L0,100 Z" fill="white"/></svg>');
            background-size: cover;
        }

        .hospital-icon {
            font-size: 3.5rem;
            color: white;
            z-index: 1;
            text-shadow: 0 2px 10px rgba(0, 0, 0, 0.2);
        }

        .hospital-card-body {
            padding: 24px;
            flex-grow: 1;
            display: flex;
            flex-direction: column;
        }

        .hospital-name {
            font-size: 1.5rem;
            font-weight: 700;
            color: #1f2937;
            margin-bottom: 8px;
            line-height: 1.3;
        }

        .hospital-rank {
            display: inline-block;
            background: linear-gradient(135deg, #f0f9ff, #e0f2fe);
            color: #0369a1;
            padding: 4px 12px;
            border-radius: 20px;
            font-size: 0.875rem;
            font-weight: 600;
            margin-bottom: 16px;
            border: 1px solid #bae6fd;
        }

        .hospital-info {
            margin-bottom: 20px;
        }

        .hospital-cost {
            font-size: 1.125rem;
            font-weight: 600;
            color: #059669;
            margin-bottom: 12px;
            display: flex;
            align-items: center;
            gap: 8px;
        }

        .hospital-cost span {
            font-size: 0.875rem;
            color: #6b7280;
            font-weight: 400;
        }

        .hospital-phone {
            display: flex;
            align-items: center;
            gap: 10px;
            color: #4b5563;
            font-size: 0.95rem;
            margin-bottom: 8px;
            padding: 8px 12px;
            background: #f9fafb;
            border-radius: 8px;
            border: 1px solid #e5e7eb;
        }

        .hospital-phone i {
            color: #3b82f6;
            font-size: 1rem;
        }

        .hospital-addresses {
            margin-top: auto;
            padding-top: 16px;
            border-top: 1px solid #e5e7eb;
        }

        .address-count {
            display: inline-flex;
            align-items: center;
            gap: 8px;
            color: #6b7280;
            font-size: 0.875rem;
            background: #f3f4f6;
            padding: 6px 12px;
            border-radius: 8px;
        }

        .address-count i {
            color: #8b5cf6;
        }

        /* Doctor Cards Styling */
        .doctors-grid {
            display: grid;
            grid-template-columns: repeat(auto-fill, minmax(280px, 1fr));
            gap: 30px;
            margin-bottom: 40px;
        }

        .doctor-card {
            background: #ffffff;
            border-radius: 16px;
            overflow: hidden;
            box-shadow: 0 6px 20px rgba(0, 0, 0, 0.08);
            transition: all 0.3s ease;
            border: 1px solid #e9ecef;
            height: 100%;
            display: flex;
            flex-direction: column;
        }

        .doctor-card:hover {
            transform: translateY(-8px);
            box-shadow: 0 12px 30px rgba(0, 0, 0, 0.15);
        }

        .doctor-card-header {
            height: 180px;
            overflow: hidden;
            position: relative;
            background: linear-gradient(135deg, #10b981, #059669);
        }

        .doctor-image {
            width: 100%;
            height: 100%;
            object-fit: cover;
        }

        .doctor-placeholder {
            width: 100%;
            height: 100%;
            display: flex;
            align-items: center;
            justify-content: center;
            background: linear-gradient(135deg, #3b82f6, #8b5cf6);
        }

        .doctor-placeholder i {
            font-size: 4rem;
            color: white;
            opacity: 0.8;
        }

        .doctor-status {
            position: absolute;
            top: 16px;
            right: 16px;
            background: rgba(255, 255, 255, 0.9);
            padding: 4px 12px;
            border-radius: 20px;
            font-size: 0.75rem;
            font-weight: 600;
            display: flex;
            align-items: center;
            gap: 6px;
        }

        .status-dot {
            width: 8px;
            height: 8px;
            border-radius: 50%;
            background: #10b981;
        }

        .doctor-card-body {
            padding: 24px;
            flex-grow: 1;
            display: flex;
            flex-direction: column;
        }

        .doctor-name {
            font-size: 1.35rem;
            font-weight: 700;
            color: #1f2937;
            margin-bottom: 4px;
        }

        .doctor-specialization {
            color: #6b7280;
            font-size: 0.95rem;
            margin-bottom: 16px;
            font-weight: 500;
        }

        .doctor-meta {
            display: flex;
            flex-direction: column;
            gap: 10px;
            margin-bottom: 24px;
        }

        .doctor-experience,
        .doctor-rating {
            display: flex;
            align-items: center;
            gap: 10px;
            color: #4b5563;
            font-size: 0.9rem;
        }

        .doctor-experience i,
        .doctor-rating i {
            color: #f59e0b;
            font-size: 1rem;
        }

        .doctor-rating i {
            color: #fbbf24;
        }

        .doctor-actions {
            margin-top: auto;
            display: flex;
            gap: 12px;
        }

        .view-profile-btn,
        .book-appointment-btn {
            flex: 1;
            padding: 10px 16px;
            border-radius: 10px;
            font-weight: 600;
            font-size: 0.9rem;
            text-align: center;
            text-decoration: none;
            transition: all 0.3s ease;
            display: flex;
            align-items: center;
            justify-content: center;
            gap: 8px;
        }

        .view-profile-btn {
            background: #f3f4f6;
            color: #4b5563;
            border: 1px solid #e5e7eb;
        }

        .view-profile-btn:hover {
            background: #e5e7eb;
            color: #1f2937;
        }

        .book-appointment-btn {
            background: linear-gradient(135deg, #3b82f6, #2563eb);
            color: white;
            border: none;
        }

        .book-appointment-btn:hover {
            background: linear-gradient(135deg, #2563eb, #1d4ed8);
            color: white;
            transform: translateY(-2px);
        }

        /* View All Button */
        .view-all-btn {
            display: inline-flex;
            align-items: center;
            gap: 10px;
            background: linear-gradient(135deg, #3b82f6, #8b5cf6);
            color: white;
            padding: 12px 28px;
            border-radius: 12px;
            font-weight: 600;
            text-decoration: none;
            transition: all 0.3s ease;
            border: none;
            cursor: pointer;
            box-shadow: 0 4px 15px rgba(59, 130, 246, 0.3);
        }

        .view-all-btn:hover {
            transform: translateY(-2px);
            box-shadow: 0 6px 20px rgba(59, 130, 246, 0.4);
            color: white;
            text-decoration: none;
        }

        .view-all-btn i {
            transition: transform 0.3s ease;
        }

        .view-all-btn:hover i {
            transform: translateX(4px);
        }

        /* No Data State */
        .no-data {
            grid-column: 1 / -1;
            text-align: center;
            padding: 60px 20px;
            background: #f9fafb;
            border-radius: 16px;
            border: 2px dashed #d1d5db;
        }

        .no-data i {
            color: #9ca3af;
            margin-bottom: 16px;
        }

        .no-data p {
            color: #6b7280;
            font-size: 1.125rem;
        }

        /* Responsive Design */
    </style>
}

