@{
    ViewData["Title"] = "About Us - Serena Healthcare";
}

<div class="about-page">
    <div class="about-hero">
        <div class="container">
            <h1>About Serena Healthcare</h1>
            <p>Revolutionizing healthcare through technology and innovation</p>
        </div>
    </div>

    <div class="container about-content">
        <div class="about-section">
            <h2>Our Mission</h2>
            <p>To create a unified healthcare ecosystem that connects patients, doctors, and hospitals through advanced technology, making healthcare accessible, efficient, and personalized for everyone.</p>
        </div>

        <div class="about-section">
            <h2>Our Vision</h2>
            <p>To be the leading global healthcare platform that transforms how healthcare is delivered and experienced, leveraging AI and data analytics to improve health outcomes worldwide.</p>
        </div>

        <div class="about-section">
            <h2>Our Values</h2>
            <div class="values-grid">
                <div class="value-card">
                    <h3>Innovation</h3>
                    <p>Continuously advancing healthcare technology</p>
                </div>
                <div class="value-card">
                    <h3>Excellence</h3>
                    <p>Delivering exceptional healthcare experiences</p>
                </div>
                <div class="value-card">
                    <h3>Accessibility</h3>
                    <p>Making healthcare available to all</p>
                </div>
                <div class="value-card">
                    <h3>Security</h3>
                    <p>Protecting patient data with highest standards</p>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .about-page {
        min-height: 100vh;
        background: var(--primary-white);
        color: var(--text-dark);
    }

    .about-hero {
        background: linear-gradient(135deg, #667eea, #764ba2);
        color: white;
        padding: 6rem 0;
        text-align: center;
    }

        .about-hero h1 {
            font-size: 3rem;
            margin-bottom: 1rem;
        }

        .about-hero p {
            font-size: 1.2rem;
            opacity: 0.9;
        }

    .about-content {
        padding: 4rem 0;
    }

    .about-section {
        margin-bottom: 4rem;
    }

        .about-section h2 {
            font-size: 2rem;
            margin-bottom: 1.5rem;
            color: var(--text-dark);
        }

        .about-section p {
            font-size: 1.1rem;
            line-height: 1.6;
            color: var(--charcoal-light);
            max-width: 800px;
        }

    .values-grid {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
        gap: 2rem;
        margin-top: 2rem;
    }

    .value-card {
        background: var(--soft-gray);
        padding: 2rem;
        border-radius: 12px;
        text-align: center;
    }

    .dark-mode .value-card {
        background: var(--charcoal-light);
    }

    .value-card h3 {
        font-size: 1.5rem;
        margin-bottom: 1rem;
        color: var(--text-dark);
    }

    .dark-mode .value-card h3 {
        color: var(--soft-white);
    }

    .value-card p {
        color: var(--charcoal-light);
        font-size: 1rem;
    }
</style>