@{
    ViewData["Title"] = "About Us - Serena Healthcare";
}

<!-- Page Header / Hero -->
<section class="page-header about-hero">
    <div class="page-header-background">
        <div class="page-header-orbs">
            <div class="page-header-orb"></div>
            <div class="page-header-orb"></div>
            <div class="page-header-orb"></div>
        </div>
        <div class="shooting-stars">
            <div class="shooting-star"></div>
            <div class="shooting-star"></div>
            <div class="shooting-star"></div>
            <div class="shooting-star"></div>
            <div class="shooting-star"></div>
            <div class="shooting-star"></div>
        </div>
    </div>
    <div class="container" style="position: relative; z-index: 2;">
        <h1 class="page-title" data-en="About Serena Healthcare" data-ar="عن سيرينا للرعاية الصحية">About Serena
            Healthcare</h1>
        <p class="page-subtitle" data-en="Revolutionizing healthcare through technology and innovation"
            data-ar="إحداث ثورة في الرعاية الصحية من خلال التكنولوجيا والابتكار">
            Revolutionizing healthcare through technology and innovation
        </p>
    </div>
</section>

<!-- About Content -->
<section class="about-content">
    <div class="container">
        <div class="about-grid">
            <div class="about-text">
                <h2 data-en="Our Mission" data-ar="مهمتنا">Our Mission</h2>
                <p data-en="To create a unified healthcare ecosystem that connects patients, doctors, and hospitals through advanced technology, making healthcare accessible, efficient, and personalized for everyone."
                    data-ar="إنشاء نظام بيئي موحد للرعاية الصحية يربط المرضى والأطباء والمستشفيات من خلال التكنولوجيا المتقدمة، مما يجعل الرعاية الصحية متاحة وفعالة وشخصية للجميع.">
                    To create a unified healthcare ecosystem that connects patients, doctors, and hospitals through
                    advanced technology, making healthcare accessible, efficient, and personalized for everyone.
                </p>

                <h2 data-en="Our Vision" data-ar="رؤيتنا">Our Vision</h2>
                <p data-en="To be the leading global healthcare platform that transforms how healthcare is delivered and experienced, leveraging AI and data analytics to improve health outcomes worldwide."
                    data-ar="أن نكون المنصة العالمية الرائدة للرعاية الصحية التي تحول كيفية تقديم الرعاية الصحية وتجربتها، والاستفادة من الذكاء الاصطناعي وتحليل البيانات لتحسين النتائج الصحية في جميع أنحاء العالم.">
                    To be the leading global healthcare platform that transforms how healthcare is delivered and
                    experienced, leveraging AI and data analytics to improve health outcomes worldwide.
                </p>

                <h2 data-en="Our Values" data-ar="قيمنا">Our Values</h2>
                <div class="values-grid">
                    <div class="value-item">
                        <div class="value-icon">
                            <i class="fas fa-lightbulb"></i>
                        </div>
                        <h3 data-en="Innovation" data-ar="الابتكار">Innovation</h3>
                        <p data-en="Continuously advancing healthcare technology"
                            data-ar="تطوير تكنولوجيا الرعاية الصحية باستمرار">Continuously advancing healthcare
                            technology</p>
                    </div>
                    <div class="value-item">
                        <div class="value-icon">
                            <i class="fas fa-star"></i>
                        </div>
                        <h3 data-en="Excellence" data-ar="التميز">Excellence</h3>
                        <p data-en="Delivering exceptional healthcare experiences"
                            data-ar="تقديم تجارب رعاية صحية استثنائية">Delivering exceptional healthcare experiences</p>
                    </div>
                    <div class="value-item">
                        <div class="value-icon">
                            <i class="fas fa-universal-access"></i>
                        </div>
                        <h3 data-en="Accessibility" data-ar="سهولة الوصول">Accessibility</h3>
                        <p data-en="Making healthcare available to all" data-ar="جعل الرعاية الصحية متاحة للجميع">Making
                            healthcare available to all</p>
                    </div>
                    <div class="value-item">
                        <div class="value-icon">
                            <i class="fas fa-shield-alt"></i>
                        </div>
                        <h3 data-en="Security" data-ar="الأمن">Security</h3>
                        <p data-en="Protecting patient data with highest standards"
                            data-ar="حماية بيانات المرضى بأعلى المعايير">Protecting patient data with highest standards
                        </p>
                    </div>
                </div>
            </div>
            <div class="about-image">
                <img src="https://images.unsplash.com/photo-1576091160399-112ba8d25d1d?ixlib=rb-4.0.3&auto=format&fit=crop&w=1470&q=80"
                    alt="Medical Team">
            </div>
        </div>
    </div>
</section>

